<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <!-- custom css styling -->
    <link rel="stylesheet" href="/css/home.css">
    <title>Charity 4U</title>
</head>

<body>
    <!-- navbar begin -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/pictures/logo.jpg" alt="" width="30" height="28" style="margin-top: 2%;"
                    class="d-inline-block align-top">
                Charity4U
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/api/user/all">Organizations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Contact us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About us</a>
                    </li>
                </ul>
                <span class="nav-item dropdown signup-btn">
                    <span class="nav-link btn btn-light" href="#" id="navbarDropdownMenuLink" role="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        Signup or login
                        <!-- opendoor svg -->
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-door-open-fill" viewBox="0 0 16 16">
                            <path
                                d="M1.5 15a.5.5 0 0 0 0 1h13a.5.5 0 0 0 0-1H13V2.5A1.5 1.5 0 0 0 11.5 1H11V.5a.5.5 0 0 0-.57-.495l-7 1A.5.5 0 0 0 3 1.5V15H1.5zM11 2h.5a.5.5 0 0 1 .5.5V15h-1V2zm-2.5 8c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1z" />
                        </svg>
                    </span>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <li><a class="dropdown-item" href="#" data-bs-toggle="modal"
                                data-bs-target="#donorModal">Register as Donor</a></li>
                        <li><a class="dropdown-item" href="#" data-bs-toggle="modal"
                                data-bs-target="#orgModal">Register as Organization</a></li>
                        <li><a class="dropdown-item" href="/api/user/login/form">Login as Donor</a></li>
                        <li><a class="dropdown-item" href="/api/user/login/formOrg">Login as Organisation</a></li>
                    </ul>
                    <!--Donar Modal -->
                    <div class="modal fade" id="donorModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h3 class="modal-title" id="exampleModalLabel">Want To Donate?</h3>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <form action="/api/user/signup/donator" method="POST">
                                    <div class="modal-body">
                                        <!-- Donor signup form-->

                                        <!-- donor-name -->
                                        <label for="donorName" class="form-label">Username</label>
                                        <input type="text" name="username" id="donorName" class="form-control"
                                            placeholder="Your Name here" required>

                                        <!-- donor Email -->
                                        <label for="donorMail" class="form-label">Email ID</label>
                                        <input type="email" name="email" id="donorMail" class="form-control"
                                            placeholder="Email" required>


                                        <!-- donor-ph no -->
                                        <label for="donorPh" class="form-label">Phone Number</label>
                                        <input type="text" name="phone" id="donorPh" class="form-control"
                                            placeholder="Ph no." required>

                                        <!-- donor-address -->
                                        <label for="donorAdd" class="form-label">Address</label>
                                        <input type="text" name="address" id="donorAdd" class="form-control"
                                            placeholder="Your Address here" required>

                                        <!-- donor password -->
                                        <label for="donorPass" class="form-label">Password</label>
                                        <input type="password" name="password" id="donorPass" class="form-control"
                                            placeholder="Set Password" required>


                                        <!-- form end -->
                                    </div>
                                    <div class="modal-footer">
                                        <button type="reset" class="btn btn-outline-danger"
                                            data-bs-dismiss="modal">Reset</button>
                                        <button type="submit" class="btn btn-outline-dark">Continue</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- Donor modal end   -->



                    <!--org Modal -->
                    <div class="modal fade" id="orgModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h3 class="modal-title" id="exampleModalLabel">Organization</h3>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <form action="/api/user/signup/organization" method="POST" enctype="multipart/form-data">
                                    <div class="modal-body">
                                        <!-- Org signup form-->

                                        <!-- org-name -->
                                        <label for="orgName" class="form-label">Username</label>
                                        <input type="text" name="username" id="orgName" class="form-control"
                                            placeholder="Your Organization Name here" required>

                                        <!-- org Email -->
                                        <label for="orgMail" class="form-label">Email ID</label>
                                        <input type="email" name="email" id="orgMail" class="form-control"
                                            placeholder="Email" required>


                                        <!-- org-ph no -->
                                        <label for="orgPh" class="form-label">Phone Number</label>
                                        <input type="text" name="phone" id="orgPh" class="form-control"
                                            placeholder="Ph no." required>

                                        <!-- org-address -->
                                        <label for="orgAdd" class="form-label">Address</label>
                                        <input type="text" name="address" id="orgAdd" class="form-control"
                                            placeholder="Your Address here" required>
                                        <label for="orgAbout" class="form-label">About</label>
                                        <textarea name="about" id="orgAbout" class="form-control"
                                            placeholder="Your description here" required></textarea>

                                        <!-- org password -->
                                        <label for="orgPass" class="form-label">Password</label>
                                        <input type="password" name="password" id="orgPass" class="form-control"
                                            placeholder="Set Password" required>
                                        <label for="orgPic" class="form-label">Organization Image</label>
                                        <input type="file" name="avatar" id="orgPic" class="form-control"
                                                placeholder="Set Pic" required>
                                        <label for="orgPic" class="form-label">Verification Image</label>
                                        <input type="file" name="avatar" id="orgPic" class="form-control"
                                                placeholder="Set Pic" required>
                                        <!-- org password -->

                                        <!-- form end -->
                                    </div>
                                    <div class="modal-footer">
                                        <button type="reset" class="btn btn-outline-danger"
                                            data-bs-dismiss="modal">Reset</button>
                                        <button type="submit" class="btn btn-outline-dark">Continue</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- org modal end   -->
                </span>
            </div>
        </div>
    </nav>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
        <ol class="carousel-indicators">
          <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"></li>
          <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"></li>
          <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"></li>
          <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="https://www.wpexplorer.com/wp-content/uploads/wordpress-best-donation-plugins.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-block">
              <h1>Welcome to our Website</h1>
            </div>
          </div>
          <div class="carousel-item">
            <img src="https://www.compassion.com/multimedia/make-a-donation-children-in-togo.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-block">
              <h1>Help the orphans</h1>
            </div>
          </div>
          <div class="carousel-item">
            <img src="pictures/old.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-block">
              <h1>Help the elderly people</h1>
            </div>
          </div>
          <div class="carousel-item">
            <img src="pictures/saveneedy.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-block">
              <h1>Help the needy</h1>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </a>
      </div>
