<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <!-- custom css -->
    <link rel="stylesheet" href="/css/orgdetail.css">
    <!-- Aos animation -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <title> <%= name %> </title>
  </head>
  <body>
    <!-- navbar common -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
          <a class="navbar-brand" href="/">
              <img src="/pictures/logo.jpg" alt="" width="30" height="24" style="margin-top: 2%;" class="d-inline-block align-top">
              Charity4U
          </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
              <li class="nav-item">
                  <a class="nav-link" href="/api/user/all">Organizations</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/contact">Contact us</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/about">About us</a>
            </li>
          </ul>
          <span class="nav-item logout-btn">
            <span class="text-white my-auto" style="font-size: 75%; display:inline; margin-right: 20px;">Welcome <span style="font-size: 200%; color:tomato"><%=username%></span>
          </span>
              <a class="nav-link btn btn-danger" style="display:inline" href="/api/user/logout">
                  Log out
              </a>
          </span>           
        </div>
      </div>
    </nav>
    <!-- navbar common end -->


    <!-- detail box  -->
    <div class="detail-box" style="justify-content: center; align-items: center;">
      <img src="<%=photo%>" class="" alt="..." style="height: 15%; width: 15%; display: block; margin-left: auto; margin-right: auto;">
        <h1 class="heading"><%=name%></h1>     
        <div class="row">
            
            <div class="" style="text-align: center;">
                <p class="org-text"> <%= about %> </p>
                <h3 class="blink_me">Donate here ðŸ‘‡</h3>
                <div style="text-align: center;">
                <a href="/api/org/all/card/<%= id %>" class="btn btn-primary donate">Cash</a>
                <a href="/api/org/all/kind/<%= id %>" class="btn btn-success donate">Kind</a>
                </div>
            </div>
             <div class="" style="text-align: center;">             
               <a href="/api/org/contributions/<%= id %>" class="btn btn-danger cont-btn" id="contri">See contributions</a>
          </div>
        </div>
    </div>
    <!-- detail box end -->

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>
  </body>
</html>